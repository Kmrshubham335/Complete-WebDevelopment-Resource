<%- include('./partials/header.ejs')%>
<style>
body {
    background: linear-gradient(180deg, #ff8a00, #e52e71);
    color: #fff;
    overflow-x: hidden;
}
</style>
<div class="container-fluid bg-gradient-primary py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg" style="background-color: rgba(255, 255, 255, 0.9);">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4" style="color: #333;">Update Student Details</h2>
                        <form method="post" action="/student/update/<%=data._id%>">
                            <div class="mb-3">
                                <label for="RollNo" class="form-label" style="color: #333;">RollNo.</label>
                                <input type="text" class="form-control" id="RollNo" name="RollNo" value="<%=data.rollno%>" required>
                            </div>
                            <div class="mb-3">
                                <label for="name" class="form-label" style="color: #333;">Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="<%=data.name%>" required  >
                            </div>
                            <div class="mb-3">
                                <label for="age" class="form-label" style="color: #333;">Age</label>
                                <input type="text" class="form-control" id="age" name="age" value="<%=data.age%>" required>
                            </div>
                            <div class="mb-3">
                                <label for="Fees" class="form-label" style="color: #333;">Fees</label>
                                <input type="text" class="form-control" id="fees" name="Fees" value="<%=data.fees%>" required>
                            </div>
                            <div class="mb-3">
                                <label for="Address" class="form-label" style="color: #333;">Address</label>
                                <input type="text" class="form-control" id="Address" name="Address" value="<%=data.address%>" required>
                            </div>
                            <div class="mb-3">
                                <label for="parent" class="form-label" style="color: #333;">Parent Details</label>
                                <input type="text" class="form-control" id="parent" name="parent" value="<%=data.parent%>" required>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Update</button>
                                <a href="" class="btn btn-secondary">Back to Home</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs')%>
