{
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        
        {
            "type": "chrome",
            "name": "http://127.0.0.1:3000/Thapa_Css/gradients/index.html",
            "request": "launch",
            "url": "http://127.0.0.1:3000/Thapa_Css/gradients/index.html"
        }
    ]
}